<% unless current_user %>
	<div class="jumbotron">
		<h1>Sign up now and flag your videos!</h1>
		<p class="lead">A simple way to index and browse the contents of your favorite videos.</p>

		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn btn-large btn-success' %>

	</div>
<% else %>

	<%= form_for @video, :html => { :class => 'form-horizontal' } do |f| %>
	  <%= f.text_field :url, :class => 'text_field input-xxlarge', :placeholder => "Youtube URL" %>
	  <button type="submit" class="btn">Create</button>
	<% end %>



	<ul class="thumbnails">
	<% @videos.each do |v| %>
		<li class="span3">
			<div class="thumbnail">
				<%= link_to(v) do %>
					<img src="http://img.youtube.com/vi/<%= v.videoId %>/0.jpg" alt="">
					
				<% end %>
			</div>
		</li>
	<% end %>
	</ul>
	

	
<% end %>      